<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="RIPcs.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <ScrollView>
        <VerticalStackLayout Padding="30,0" Spacing="50">
            <Image
                Aspect="AspectFit"
                HeightRequest="185"
                SemanticProperties.Description="dot net bot in a race car number eight"
                Source="dotnet_bot.png" />

            <Label
                SemanticProperties.HeadingLevel="Level1"
                Style="{StaticResource Headline}"
                Text="Разработка и поддержка цифровых систем" />

            <Label
                SemanticProperties.Description="Программа для всех лаб"
                SemanticProperties.HeadingLevel="Level2"
                Style="{StaticResource SubHeadline}"
                Text="Программа для всех лаб" />

            <Label
                SemanticProperties.HeadingLevel="Level2"
                Style="{StaticResource SubHeadline}"
                Text="Create by Ruslan Emdihanov"
                VerticalTextAlignment="End" />
        </VerticalStackLayout>

    </ScrollView>

</ContentPage>
